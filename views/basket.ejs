<div ng-click="purchase()">Purchase Basket</div>

<br></br>
<br></br>

<ul ng-show="show == 1 || show == 2">
    <li ng-repeat="card in cards">
          <div ng-click="useCard(card)">
                {{card.username}}
                {{card.brand}}
                {{card.cardNo}}
          </div>
    </li>
</ul>

<ul ng-show="show != 1">
    <li ng-repeat="item in itemBasket">
          <div>
                  {{item.name}}
                  <img src="/uploads/{{item.image1}}" width="200" height="200">
                  <div>
                      <button ng-click="remove(item._id)">Remove</button>
                  </div>
          </div>
    </li>
</ul>

<br></br>
<br></br>

<div ng-click="confirm()">Confirm Purchase</div>