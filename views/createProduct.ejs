<div id="wrap">
    <div class="container">
        <form method="POST" enctype="multipart/form-data" action="/">
            <div class="form-group">
                <div class="form-row justify-content-center">
                    <div class="col-xs-2">
                        <h2> Product Details </h2>
                        <div class="form-group">
                            <div class="col-xs-3 align-self-center">
                                <label> Product Name: </label>
                            </div>
                            <div class="col-xs-2" style="min-width:304px">
                                <input type="text" name="title" placeholder="title" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3 align-self-center">
                                <label> Product Description: </label>
                            </div>
                            <div class="col-xs-2">
                                <input type="text" name="description" placeholder="description" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-2 align-self-center">
                                <label> Product Price: </label>
                            </div>
                            <div class="col-xs-2">
                                <input type="text" name="cost" placeholder="cost" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-sm-6" style="float: left;">
                            <select name="category" class="form-control" required>
                                <option value="Electronics">Electronics</option>
                                <option value="Farm">Farm</option>
                                <option value="Literature">Literature</option>
                                <option value="Gaming">Gaming</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-row justify-content-center">
                    <div class="col-xs-2">
                        <h2> Product Images </h2>
                        <div class="form-group">
                            <div class="col-xs-3 align-self-center">
                                <input type="file" name="upl" class="form-control-file">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3 align-self-center">
                                <input type="file" name="upl1" class="form-control-file">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3 align-self-center">
                                <input type="file" name="upl2" class="form-control-file">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3 align-self-center">
                                <input type="hidden" name="user" class="form-control" value="{{template.user}}" hidden>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3 align-self-center">
                                <input type="submit" class="btn btn-primary">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>