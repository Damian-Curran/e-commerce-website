<!-- Search: <input type="text" ng-model="search.name"> -->
<div class="pre-scrollable" id="wrap">
  <div class="container-fluid">
    <div class="row justify-content-start">
      <div class="col" style="padding-right:0; padding-left:0">
          From €<input ng-change="select()" ng-model="min" ng-model-options="{debounce: 1000}"> To €<input ng-change="select()" ng-model="max" ng-model-options="{debounce: 1000}">
      </div>
    </div>
    <div id="push"></div>
    <div class="row">
      <div class="col-md-2" ng-repeat="product in products" ng-click="go(product._id)" style="min-width: 200px; max-width: 300px;">
        <div class="row">
          <img src="/uploads/{{product.image1}}" width="200" height="200">
        </div>
        <div class="row justify-content-center">
          <div class="col-md-4 align-self-center">
            <a href="">{{product.name}}</a>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-4 align-self-center text-danger">
            €{{product.cost}}
          </div>
        </div>
      </div>
    </div>
    <div id="push"></div>
  </div>
</div>

<div id="footer" ng-show="showPage != false">
  <div class="container">
    <div class="row justify-content-center">
      <button ng-disabled="currentPage <= 1" ng-click="previous()">previous</button>
      {{currentPage}}/ {{pages}}
      <button ng-disabled="currentPage >= pages" ng-click="next()">next</button>
    </div>
  </div>
</div>