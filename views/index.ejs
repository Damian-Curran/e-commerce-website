    <div ng-show=" template.user != '' " ng-click="basket()">Basket</div>    
    <div ng-show=" template.user != '' " ng-click="creditCard()">Add Card</div>
    <div ng-show=" template.user != '' " ng-click="soldItems()">Sold Items</div>
    <div ng-show=" template.user != '' " ng-click="boughtItems()">Bought Items</div>
    <div ng-show=" template.user != '' " ng-click="editUser()">Edit Account</div>

    <select class="form-control" ng-model="category" ng-options="x for x in categories" ng-change="select()">
    </select>

