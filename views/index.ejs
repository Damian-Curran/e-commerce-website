    <div class="container-fluid">
      <div class="row">
        <div class="col align-self-center" style="padding-left:0">
            <a class="navbar-brand" href="#">{{ template.siteName }}</a>
        </div>
        <div class="col align-self-center" style="padding-right:0">
          <div class="nav-input">
            <input type="text" class="form-control col-md-18 col-sm-14 col-xs-8">
          </div>
        </div>
        <div class="col align-self-center" style="padding-left:0">
            <div class="nav-input">
              <button class="btn-sm">Search</button>
            </div>
        </div>
        <div class="row align-items-end">
            <div class="col">
                <btn class="btn-link btn-sm dropdown-toggle" data-toggle="dropdown">Your Account</btn>
                <ul class="dropdown-menu">
                    <li><a href="" ng-click="soldItems()">Sold Items</a></li>
                    <li><a href="" ng-click="boughtItems()">Bought Items</a></li>
                    <li><a href="" ng-click="editUser()">Edit Account</a></li>
                    <li><a href="" ng-show=" template.user != '' " ng-click="logout()">Logout</a></li>
                  </ul>
                </button>
                <btn class="btn-link btn-sm" ng-click="basket()">Basket</btn>
            </div>
          </div>
      </div>
    </div>

    <!--<div ng-show=" template.user == '' " ng-click="login()">Login</div>                   ng-click="yourAccount()"-->
    <div ng-show=" template.user != '' " ng-click="creditCard()">Add Card</div>

