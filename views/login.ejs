<div id="wrap">
    <div class="container">
        <form method="POST" name="loginform">
            <div class="form-group">
                <div class="form-row justify-content-center">
                    <div class="col-xs-2">
                        <h2> Account Details </h2>
                        <div class="form-group">
                            <div class="col-xs-3 align-self-center">
                                <label> Your Email: </label>
                            </div>
                            <div class="col-xs-2">
                                <input class="form-control" type='text' ng-model="email" name="email" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3 align-self-center">
                                <label> Your Password: </label>
                            </div>
                            <div class="col-xs-2">
                                <input class="form-control" type='password' ng-model="password" name="password" required/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row justify-content-center">
                    <div class="col-xs-4">
                        <button class="btn btn-primary" ng-click="login()">Login</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>